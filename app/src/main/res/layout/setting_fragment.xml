<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/activity_page" >

    <ScrollView
        style="@style/ll_vertical_match_match"
        android:layout_weight="1">

        <LinearLayout style="@style/ll_vertical_match_match">

            <LinearLayout
                android:id="@+id/my_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/my_header_backgroud"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="21dp"
                    android:layout_marginTop="12dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/my_header_img2"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_alignParentLeft="true"
                            android:src="@drawable/user_logo" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tx_myheader_username"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="8dp"
                                android:text="张三"
                                android:textColor="#FFFFFF"
                                android:textSize="13sp" />

                            <TextView
                                android:id="@+id/tx_myheader_phone"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="8dp"
                                android:text="180****5234"
                                android:textColor="#FFFFFF"
                                android:textSize="13sp" />

                        </LinearLayout>

                    </LinearLayout>


                    <ImageView
                        android:id="@+id/ig_setting_profit_detailed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/setting_profit_detailed_bt"
                        android:layout_alignParentRight="true" />

                    <!--<ImageView-->
                        <!--android:id="@+id/ivSettingHead"-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:layout_alignParentEnd="true"-->
                        <!--android:layout_centerVertical="true"-->
                        <!--android:src="@drawable/my_setting_btn"-->
                        <!--android:layout_alignParentRight="true" />-->

                </RelativeLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="34dp"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:drawablePadding="10dp"
                        android:textSize="@dimen/dimen_14"
                        android:text="交易分润(元)"
                        android:textColor="@color/white"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/tx_transation_profit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:drawablePadding="10dp"
                        android:text="688000.00"
                        android:textSize="@dimen/dimen_32"
                        android:textColor="@color/white"
                        android:visibility="visible" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_epos_my_bank_card_item"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/dimen_32"
                    android:layout_marginBottom="@dimen/dimen_23"
                    android:paddingRight="22dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tx_activation_fanxian"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="3259.00"
                            android:textColor="@color/white"
                            android:textSize="17sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="激活返现(元)"
                            android:textColor="@color/white"
                            android:layout_marginTop="11dp"
                            android:textSize="14sp" />


                    </LinearLayout>

                    <View style="@style/divider_vertical_05dp_white" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tx_cash_fanxian"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="3259.00"
                            android:textColor="@color/white"
                            android:textSize="17sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="快提返现(元)"
                            android:textColor="@color/white"
                            android:layout_marginTop="11dp"
                            android:textSize="14sp" />


                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>


            <View style="@style/divider_horizontal_1px" />

            <!--<LinearLayout-->
            <!--android:id="@+id/llSettingSetting"-->
            <!--style="@style/content_item_white">-->

            <!--<TextView-->
            <!--style="@style/content_item_lf_tv"-->
            <!--android:layout_weight="1"-->
            <!--android:text="个人设置" />-->

            <!--<ImageView style="@style/content_item_rt_img" />-->
            <!--</LinearLayout>-->

            <LinearLayout
                android:id="@+id/ll_realname"
                style="@style/content_item_white">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/realname_auth_mini" />


                <TextView
                    style="@style/content_item_lf_tv"
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:layout_weight="1"
                    android:text="实名认证" />

                <ImageView style="@style/content_item_rt_img" />
            </LinearLayout>

            <View style="@style/divider_horizontal_1px" />

            <LinearLayout
                android:id="@+id/ll_mybankcard"
                style="@style/content_item_white">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/mybankcard_mini" />

                <TextView
                    style="@style/content_item_lf_tv"
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:layout_weight="1"
                    android:text="我的银行卡" />

                <ImageView style="@style/content_item_rt_img" />
            </LinearLayout>

            <View style="@style/divider_horizontal_1px" />

            <LinearLayout
                android:id="@+id/ll_settlement_detail"
                style="@style/content_item_white">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/settlement_detail_mini" />

                <TextView
                    style="@style/content_item_lf_tv"
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:layout_weight="1"
                    android:text="秒结详情" />

                <ImageView style="@style/content_item_rt_img" />

            </LinearLayout>

            <View style="@style/divider_horizontal_1px" />

            <LinearLayout
                android:id="@+id/ll_setting"
                style="@style/content_item_white">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/setting_mini" />

                <TextView
                    style="@style/content_item_lf_tv"
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:layout_weight="1"
                    android:text="设置" />

                <ImageView style="@style/content_item_rt_img" />
            </LinearLayout>

            <View style="@style/divider_horizontal_1px" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>